@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Hello from view</h1>

<table class="table">
    <a asp-controller="users" asp-action="Edit" class="btn btn-success">Add new</a>
    @foreach (var item in Model)
    {
        <tr>
            <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"/></a></td>
            <td>@item.FirstName</td>
            <td>@item.SurName</td>
            <td>@item.Patronymic</td>
            <td>@item.Age</td>
            <td>
                @Html.ActionLink("Detail", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>