@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table table-bordered">

    <tr>
        <td>Id</td>
        <td>@Model.Id</td>
    </tr>
    
    <tr>
        <td>Last name</td>
        <td>@Model.SurName</td>
    </tr>

    <tr>
        <td>Name</td>
        <td>@Model.FirstName</td>
    </tr>
    
    <tr>
        <td>Patronymic</td>
        <td>@Model.Patronymic</td>
    </tr>

    <tr>
        <td>Age</td>
        <td>@Model.Age</td>
    </tr>

    <tr>
        <td>Position</td>
        <td>@Model.Position</td>
    </tr>

</table>

@Html.ActionLink("← go to list", "Index")